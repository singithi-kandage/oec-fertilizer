@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/fertilizer.jpg" alt="Fertilizer"/>
            <div class="carousel-caption" role="option">
                <p>
                    High yield, customized fertilizer treatments at an an affordable cost.
                    <a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkID=525028&clcid=0x409">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/farm.jpg" alt="Farm" />
            <div class="carousel-caption" role="option">
                <p>
                    Last year, OEC ranked #1 as the most trusted fertilizer provider for large scale agriculture. 
                    <a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkID=525030&clcid=0x409">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/corn.jpg" alt="Corn Fields" />
            <div class="carousel-caption" role="option">
                <p>
                    Learn more about our commitment to environmentally sustainable farming practices.
                    <a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkID=525029&clcid=0x409">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/cows.jpg" alt="Cows in Pasture" />
            <div class="carousel-caption" role="option">
                <p>
                    We're more than just a fertilizer company! Find out how more about we can fit your business needs.
                    <a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkID=525027&clcid=0x409">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-6">
        <h2>Crops</h2>
        <p>View, create, update, and delete crops.</p>
        <a class="btn btn-default" asp-area="" asp-controller="SKCrop" asp-action="Index">
            Learn More >>
        </a>
    </div>
    <div class="col-md-6">
        <h2>Fertilizer</h2>
        <p>View, create, update, and delete fertilizer treatments.</p>
        <a class="btn btn-default" asp-area="" asp-controller="SKCrop" asp-action="Index">
            Learn More >>
        </a>
    </div>
</div>
