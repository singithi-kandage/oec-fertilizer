@model IEnumerable<SKOEC.Models.Variety>
@{
    ViewData["Title"] = $"All Varieties of {@ViewBag.cropName}";
}

<style>
    .capitalize {
        text-transform: capitalize;
    }
</style>

<h2 class="capitalize">@ViewData["Title"]</h2>

<p>
    <a asp-action="Create">Create New</a> 
    <span>   |    </span>
    <a asp-controller="SKCrop" asp-action="Index">Return to Crops</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-action="Index"
                   asp-controller="SKPlot"
                   asp-route-name="@item.Name"
                   asp-route-varietyId="@item.VarietyId"
                   asp-route-filter="DatePlanted">
                    @Html.DisplayFor(modelItem => item.Name)
                </a>
                
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.VarietyId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.VarietyId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.VarietyId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
